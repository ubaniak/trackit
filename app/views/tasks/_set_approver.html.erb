<%= form_tag update_approver_path(@task) do %>
    <div class="row-fluid" style="width: 500px;">
        <div class="span12">
            <%= label_tag :approver %>
            <%= select_tag :approver, options_from_collection_for_select(User.all, "id", "name")  %>
        </div>
    </div>

    <br>
    <%= submit_tag "Set" %>
    <%= link_to "Cancel", cancel_approver_path(@task), :remote => true %>
<% end %>
